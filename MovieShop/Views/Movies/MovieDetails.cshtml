@model ApplicationCore.Models.MovieDetailsModel
@{
    var bgUrl = !string.IsNullOrWhiteSpace(Model.BackdropURL)
        ? Model.BackdropURL
        : (!string.IsNullOrWhiteSpace(Model.PosterURL) ? Model.PosterURL : "/images/placeholder-wide.png");
}

<div class="movie-hero mb-8">
  <div class="hero-bg" style="background-image:url('@bgUrl');"></div>
  <div class="hero-overlay"></div>

  <div class="container py-5 hero-content">
    <div class="row g-4 align-items-start">
      <div class="col-12 col-md-3 d-flex justify-content-center">
        <img class="img-fluid rounded shadow w-100"
             src="@(string.IsNullOrWhiteSpace(Model.PosterURL) ? "/images/placeholder.png" : Model.PosterURL)"
             alt="@Model.Title" style="max-width: 300px;" />
      </div>

      <div class="col-12 col-md-6">
        <h1 class="mb-2 text-white">@Model.Title</h1>
        @if (!string.IsNullOrWhiteSpace(Model.Tagline))
        {
            <div class="text-dim mb-2">@Model.Tagline</div>
        }

        <div class="mb-2 small text-dim">
          @if (Model.RunTime.HasValue) { <span>@Model.RunTime m</span> }
          @if (Model.ReleaseDate.HasValue) {   <span class="mx-2" aria-hidden="true">|</span>
                                                <span>@Model.ReleaseDate.Value.ToString("yyyy")</span> }
        </div>
        <div class="mb-3">
          @foreach (var g in Model.Genres ?? Enumerable.Empty<string>())
          {
          <span class="d-inline-block px-2 py-1 me-2 mb-2 border border-white text-white rounded-pill bg-transparent">
            @g
          </span>
          }
          @if (Model.AverageRating.HasValue)
          { <span class="rating-badge ms-1">@Model.AverageRating.Value.ToString("0.0")</span> }
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Overview))
        { <p class="mb-0 text-dim">@Model.Overview</p> }
      </div>

      <div class="col-12 col-md-3 d-grid gap-2">
        <button class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#reviewModal">REVIEW</button>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#buyModal">
          BUY @((Model.Price?.ToString("C")) ?? "")
        </button>
      </div>
    </div>
  </div>
</div>

<div class="bg-white">
  <div class="container">
    <hr class="my-4" />
    <div class="row g-4">
    </div>
  </div>
</div>


    <hr class="my-4" />

    <div class="row g-4">
        <div class="col-12 col-lg-6">
            <h5 class="mb-3">MOVIE FACTS</h5>
            <ul class="list-group mb-4">
                <li class="list-group-item d-flex justify-content-between">
                    <span><i class="bi bi-calendar3 me-2"></i>Release Date</span>
                    <span>@(Model.ReleaseDate?.ToString("MMM dd, yyyy") ?? "—")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span><i class="bi bi-hourglass-split me-2"></i>Run Time</span>
                    <span>@(Model.RunTime.HasValue ? $"{Model.RunTime} m" : "—")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span><i class="bi bi-cash-stack me-2"></i>Box Office</span>
                    <span>@(Model.Revenue?.ToString("C") ?? "—")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span><i class="bi bi-cash me-2"></i>Budget</span>
                    <span>@(Model.Budget?.ToString("C") ?? "—")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span><i class="bi bi-translate me-2"></i>Language</span>
                    <span>@(Model.OriginalLanguage ?? "—")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span><i class="bi bi-tag me-2"></i>Price</span>
                    <span>@(Model.Price?.ToString("C") ?? "—")</span>
                </li>
            </ul>

            <h5 class="mb-3">TRAILERS</h5>
            <div class="list-group">
                @foreach (var t in Model.Trailers ?? Enumerable.Empty<ApplicationCore.Models.TrailerModel>())
                {
                    <a class="list-group-item list-group-item-action"
                       href="@t.TrailerUrl" target="_blank" rel="noopener">
                        <i class="bi bi-play-circle me-2"></i>@t.Name
                    </a>
                }
                @if ((Model.Trailers?.Count ?? 0) == 0)
                {
                    <div class="text-muted">No trailers available.</div>
                }
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <h5 class="mb-3">CAST</h5>
            <div class="list-group">
                @foreach (var c in Model.Casts ?? Enumerable.Empty<ApplicationCore.Models.CastModel>())
                {
                    <a class="list-group-item list-group-item-action d-flex align-items-center"
                       asp-controller="Cast" asp-action="Details" asp-route-id="@c.Id">
                        <img src="@(string.IsNullOrWhiteSpace(c.ProfilePath) ? "/images/cast-placeholder.png" : c.ProfilePath)"
                             class="rounded me-3" style="width:48px;height:64px;object-fit:cover;" alt="@c.Name" />
                        <div class="flex-grow-1">
                            <div class="fw-semibold">@c.Name</div>
                            <small class="text-muted">as @c.Character</small>
                        </div>
                    </a>
                }
                @if ((Model.Casts?.Count ?? 0) == 0)
                {
                    <div class="text-muted">No cast information.</div>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="buyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Buy “@Model.Title”</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Price: <strong>@(Model.Price?.ToString("C") ?? "—")</strong>
            </div>
            <div class="modal-footer">
                <form method="post" asp-controller="PurchaseAndReview" asp-action="Buy">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="movieId" value="@Model.Id" />
                    <input type="hidden" name="Title" value="@Model.Title" />
                    <input type="hidden" name="Price" value="@Model.Price" />
                    <button type="submit" class="btn btn-success">Purchase</button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="reviewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Review “@Model.Title”</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-controller="PurchaseAndReview" asp-action="Create">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="movieId" value="@Model.Id" />
                    <input type="hidden" name="title" value="@Model.Title" />

                    <div class="mb-3">
                        <label class="form-label">Rating</label>
                        <select class="form-select" name="rating" required>
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Your Review</label>
                        <textarea class="form-control" name="reviewText" rows="4" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
