@model ApplicationCore.Models.GenreDetailsModel

<div class="container py-4">
    <h2 class="mb-3">Genre: @Model.Name</h2>
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-5 g-3">
        @foreach (var m in Model.Movies)
        {
            <div class="col">
                <a asp-controller="Movies" asp-action="MovieDetails" asp-route-id="@m.Id" class="text-decoration-none">
                    <div class="card h-100">
                        <img class="card-img-top"
                             src="@(string.IsNullOrWhiteSpace(m.PosterURL) ? "/images/placeholder.png" : m.PosterURL)"
                             alt="@m.Title" />
                        <div class="card-body p-2">
                            <div class="small fw-semibold text-truncate">@m.Title</div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
