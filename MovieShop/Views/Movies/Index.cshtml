@model List<ApplicationCore.Models.MovieCardModel>

@{
    ViewData["Title"] = "Top 30 Movies";
}

<div class="container py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No movies found.</div>
    }
    else
    {
        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
            @foreach (var m in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@m.Id">
                            <img class="card-img-top"
                                 src="@(string.IsNullOrWhiteSpace(m.PosterURL) ? "/images/placeholder.png" : m.PosterURL)"
                                 alt="@(m.Title ?? "Movie")" />
                        </a>
                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="@m.Title">@m.Title</h6>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a class="btn btn-sm btn-primary w-100"
                               asp-controller="Movies" asp-action="Details" asp-route-id="@m.Id">
                                View
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
