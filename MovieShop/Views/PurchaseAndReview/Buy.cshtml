@{
    ViewData["Title"] = "Purchase Complete";
}

<div class="container py-5">
    <div class="card shadow text-center">
        <div class="card-header bg-success text-white">
            <h3>Thank you for your purchase!</h3>
        </div>
        <div class="card-body">
            <h4>@ViewBag.Title</h4>
            <p class="text-muted">Movie ID: @ViewBag.MovieId</p>
            <p class="fs-5">Price Paid: <strong>@ViewBag.Price.ToString("C")</strong></p>
            <p class="mt-3">Enjoy the movie</p>
        </div>
        <div class="card-footer">
            <a asp-controller="Movies" asp-action="MovieDetails" asp-route-id="@ViewBag.MovieId"
               class="btn btn-primary">
                Go Back to Movie Details
            </a>
        </div>
    </div>
</div>
