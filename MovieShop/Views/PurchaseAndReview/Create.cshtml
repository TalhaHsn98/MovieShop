@{
   
    var title = ViewBag.Title as string;
    var rating = ViewBag.Rating;            
    var reviewText = ViewBag.ReviewText as string;
    var movieId = ViewBag.MovieId;
}

<div class="container py-5">
    <div class="card shadow text-center">
        <div class="card-header bg-success text-white">
            <h3>✅ Thanks for your review!</h3>
        </div>

        <div class="card-body">
            <h4>@(string.IsNullOrWhiteSpace(title) ? "This movie" : title)</h4>
            <p class="text-muted">Movie ID: @movieId</p>
            <p class="text-muted">@title</p>


            <p class="fs-5"><strong>Rating:</strong> @rating</p>

            <div class="mx-auto" style="max-width: 720px;">
                <div class="text-start border rounded p-3 bg-light">
                    @Html.Raw(Html.Encode(reviewText).Replace("\n", "<br />"))
                </div>
            </div>

            <a class="btn btn-primary mt-4"
               asp-controller="Movies" asp-action="MovieDetails" asp-route-id="@movieId">
                Back to Movie Details
            </a>
        </div>
    </div>
</div>
